<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>LoveConnect ‚Äì Invites</title>
  <link rel="stylesheet" href="/css/styles.css"/>
  <style>
    .invites-list {
      margin-top: 2rem;
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .invite-card {
      background: #fff5f5;
      border: 2px solid #e63946;
      border-radius: 16px;
      padding: 1.5rem;
    }

    .invite-card h2 {
      margin: 0 0 0.5rem 0;
      color: #e63946;
    }

    .invite-card p {
      margin: 0.3rem 0;
      color: #333;
    }

    .invite-card details {
      margin-top: 1rem;
    }

    .invite-card summary {
      cursor: pointer;
      color: #1d3557;
      font-weight: bold;
    }

    .invite-card details div {
      margin-top: 0.5rem;
    }
  </style>
</head>
<body>
  <div class="container">
    <header>
      <h1>Your Invites üíå</h1>
      <div class="nav-buttons">
        <a href="#" id="logoutBtn" ><button>Logout</button></a>
  <a href="/user"><button class="secondary">My Page</button></a>
      </div>
    </header>

    <div class="invites-list">
      <% if (data.length === 0) { %>
        <h1>No invites sent yet</h1>
      <% } %>

      <% data.forEach(({ form, invite }) => { %>
        <div class="invite-card">
          <h2><%= form.name %>, <%= form.age %></h2>
          <p><strong>City:</strong> <%= form.city %></p>
          <p><strong>Gender:</strong> <%= form.gender %></p>
          <p><em><%= form.bio %></em></p>
          <p><strong>Status:</strong> <%= invite.status %></p>
          <p><strong>Sent on:</strong> <%= new Date(invite.created_at).toLocaleDateString() %></p>

          <% if (invite.status === 'accepted') { %>
            <details>
              <summary>üîê View Private Info</summary>
              <div>
                <p><strong>Email:</strong> <%= form.email %></p>
                <p><strong>Phone:</strong> <%= form.phone %></p>
              </div>
            </details>
          <% } %>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
<script>
  const logoutBtn = document.querySelector('#logoutBtn');

logoutBtn.addEventListener('click', async (e) => {
  e.preventDefault();

  try {
    const res = await fetch("/api/user/logout", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      credentials: "include",
    });

    if (res.ok) {
      window.location.href = "/";
    } else {
      const data = await res.json();
      alert(data.message || "Logout error");
    }
  } catch (err) {
    console.error("Logout failed:", err);
    alert("An unexpected error occurred");
  }
});

</script>