<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>LoveConnect ‚Äì Received Invites</title>
  <link rel="stylesheet" href="/css/styles.css"/>
  <style>
    .action-buttons {
      display: flex;
      gap: 0.5rem;
      margin-top: 1rem;
    }

    .accept-btn {
      background-color: #2a9d8f;
    }

    .accept-btn:hover {
      background-color: #21867a;
    }

    .reject-btn {
      background-color: #e63946;
    }

    .reject-btn:hover {
      background-color: #d62839;
    }

    .invites-list {
      margin-top: 2rem;
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .invite-card {
      background: #f0f8ff;
      border: 2px solid #e63946;
      border-radius: 16px;
      padding: 1.5rem;
    }

    .invite-card h2 {
      margin: 0 0 0.5rem 0;
      color: #e63946;
    }

    .invite-card p {
      margin: 0.3rem 0;
      color: #333;
    }

    .invite-card details {
      margin-top: 1rem;
    }

    .invite-card summary {
      cursor: pointer;
      color: #1d3557;
      font-weight: bold;
    }

    .invite-card details div {
      margin-top: 0.5rem;
    }
  </style>
</head>
<body>
  <div class="container">
    <header>
      <h1>Received Invites üì•</h1>
      <div class="nav-buttons">
  <a href="#" id="logoutBtn" ><button>Logout</button></a>
  <a href="/user"><button class="secondary">My Page</button></a>
      </div>
    </header>

    <div class="invites-list">
      <% if (data.length === 0) { %>
        <h1>No invites received yet</h1>
      <% } %>

      <% data.forEach(({ form, invite }) => { %>
        <div class="invite-card">
          <h2><%= form.name %>, <%= form.age %></h2>
          <p><strong>City:</strong> <%= form.city %></p>
          <p><strong>Gender:</strong> <%= form.gender %></p>
          <p><em><%= form.bio %></em></p>
          <p><strong>Status:</strong> <%= invite.status %></p>
          <p><strong>Received on:</strong> <%= new Date(invite.created_at).toLocaleDateString() %></p>

          <% if (invite.status === 'pending') { %>
            <div class="action-buttons">
                <button class="btn accept-btn" onclick="handleInviteAction('<%= invite.id %>', 'accept')">Accept</button>
                <button class="btn reject-btn" onclick="handleInviteAction('<%= invite.id %>', 'reject')">Reject</button>
            </div>
          <% } else if (invite.status === 'accepted') { %>
            <details>
              <summary>üîê View Private Info</summary>
              <div>
                <p><strong>Email:</strong> <%= form.email %></p>
                <p><strong>Phone:</strong> <%= form.phone %></p>
              </div>
            </details>
          <% } else if (invite.status === 'rejected') { %>
            <p style="color: #e63946; font-weight: bold;">‚ùå You rejected this invite.</p>
          <% } %>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>

<script>
    async function handleInviteAction(inviteId, action) {
  const res = await fetch(`/api/invite/${inviteId}/${action}`, { method: 'POST' });
  if (res.ok) {
    location.reload(); // reload the page after successful update
  } else {
    alert('Failed to update invite status.');
  }
}
const logoutBtn = document.querySelector('#logoutBtn');

logoutBtn.addEventListener('click', async (e) => {
  e.preventDefault();

  try {
    const res = await fetch("/api/user/logout", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      credentials: "include",
    });

    if (res.ok) {
      window.location.href = "/";
    } else {
      const data = await res.json();
      alert(data.message || "Logout error");
    }
  } catch (err) {
    console.error("Logout failed:", err);
    alert("An unexpected error occurred");
  }
});

</script>